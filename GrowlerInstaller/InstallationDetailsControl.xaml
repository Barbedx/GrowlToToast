<UserControl x:Class="GrowlerInstaller.InstallationDetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GrowlerInstaller"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Label" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox TextWrapping="Wrap" Grid.Column="1" Text="TextBox" VerticalAlignment="Center" Margin="5,0"/>
        <Label Content="Label" Grid.Column="2" VerticalAlignment="Center" Margin="5,0"/>
        <Button Content="Button" Grid.Column="3" VerticalAlignment="Center" Margin="5,0"/>

    </Grid>
</UserControl>
